<AdminWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    
    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.06, .45, .45,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Dashboard Sacoleiro'
            bold: True
            size_hint: (.9,None)
            height: 30
    BoxLayout:
        id: content_nav
        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.06, .52, .52,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ToggleButton:
                id: meses_toggle
                text: 'Meses'
                bold: True
                size_hint_y: .1
                state: 'down'
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: pracas_toggle
                text: 'Praças'
                bold: True
                size_hint_y: .1
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            Label:
                id: sp
                text: ''
                size_hint_y: .7
            ToggleButton:
                id: sair_toggle
                text: 'Sair'
                bold: True
                size_hint_y: .1
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: app.stop()
        BoxLayout:
            id: all_content
            size_hint_x: .8
            padding: (20,10)
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: scrn_meses
                    name: 'scrn_meses'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: scrn_meses
                Screen:
                    id: scrn_pracas_content
                    name: 'scrn_pracas_content'
                    GridLayout:
                        cols: 3
                        size_hint_y: .2
                        spacing: dp(1)
                        BoxLayout:
                            Button:
                                text: 'Cataguases'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Magé'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Região dos Lagos'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Três Rios'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Piabetá'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Piabetá 2'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Macabu'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Teresópolis'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Juiz de Fora'
                                on_release: root.change_screen(self)
                Screen:
                    id: scrn_cataguases
                    name: 'scrn_cataguases'
                    BoxLayout:
                        id: tabela_cataguases
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        size_hint_y: .2
                        BoxLayout:
                            id: ops_fields
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add
                                text: 'Adicionar Vendedora'
                                on_release: root.add_vend_fields()
                            Button:
                                id: crud_update
                                text: 'Atualizar Vendedora'
                                on_release: root.update_vend_fields()
                            Button:
                                id: crud_remove
                                text: 'Remover Vendedora'
                                on_release: root.remove_vend_fields()
                    
                Screen:
                    id: scrn_mage
                    name: 'scrn_mage'
                    BoxLayout:
                        id: tabela_mage
                    GridLayout:
                        cols: 3
                        size_hint_y: .2
                        spacing: dp(1)
                        BoxLayout:
                            Button:
                                text: 'Cataguases'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Magé'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Região dos Lagos'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Três Rios'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Piabetá'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Piabetá 2'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Macabu'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Teresópolis'
                                on_release: root.change_screen(self)
                        BoxLayout:
                            Button:
                                text: 'Juiz de Fora'
                                on_release: root.change_screen(self)
                Screen:
                    id: scrn_vendedoras
                    name: 'scrn_vendedoras'
                